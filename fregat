;this is key for adding login post settings
!f6::
{
Gui Destroy 
Gui, Add, Text,, email:
Gui, Add, Edit, vEmail ym  ; The ym option starts a new column of controls.
Gui, Add, Button, default, OK
Gui, Show,, Please enter e-mail
return
GuiClose:
ButtonOK:
Gui, Submit  ; Save the input from the user to each control's associated variable.
StringReplace, pass, email, @eo.tensor.ru, , All
return
}	

			
;this is key for copying login post settings
!f5::
{
clipstore=%clipboard%
sleep 800
send {tab}
sleep 300


{
if email=
{
send %email%
}
else
{
clipboard =%email%
sleep 200
send +{ins}
}
}


sleep 300
send {tab}
sleep 300


{
if email=
{
send %email%
}
else
{
clipboard =%email%
sleep 200
send +{ins}
}
}


sleep 300
send {tab}
sleep 300
{
if pass=
{
send %pass%
}
else
{
clipboard =%pass%
sleep 200
send +{ins}
}
}
send {tab}
sleep 300
clipboard =smtp.ea.tensor.ru
sleep 200
send +{ins}
sleep 300
send {tab 2}
sleep 300
clipboard =pop.ea.tensor.ru
sleep 200
send +{ins}
sleep 300
clipboard =%clipstore%
return
}


