;this is key for Special Operator settings
!f8::
{
sleep 100
clipstore=%clipboard%
sleep 800
send {tab 11}
sleep 300
clipboard =TENSOR
sleep 200
send +{ins}
send {tab}
sleep 300
clipboard =1BE
sleep 200
send +{ins}
send {tab}
sleep 300
clipboard =ООО 'Компания 'Тензор'
sleep 200
send +{ins}
send {tab}
sleep 300
clipboard =0BE
sleep 200
send +{ins}
sleep 200
send {tab}
sleep 200
send {space}
sleep 200
send {tab 2}
sleep 200
clipboard =oper_edo@nalog.tensor.ru
sleep 200
send +{ins}
sleep 300
send {tab}
clipboard =srv.ea.tensor.ru
sleep 200
send +{ins}
sleep 200
clipboard =%clipstore%
return
}

